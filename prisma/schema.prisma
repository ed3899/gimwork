// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId      String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String  @unique
  firstName   String
  lastName    String
  phoneNumber String?
  password    String

  Offers   Offer[]   @relation("UserOffers")
  Wishlist Wishlist?
}

model Wishlist {
  wishlistId String @id @default(auto()) @map("_id") @db.ObjectId

  owner   User   @relation(fields: [ownerId], references: [userId])
  ownerId String @unique @db.ObjectId

  items WishlistedItem[]
}

model WishlistedItem {
  wishlistedItemId String @id @default(auto()) @map("_id") @db.ObjectId

  Offer Offer?

  Wishlist   Wishlist @relation(fields: [WishlistId], references: [wishlistId])
  WishlistId String   @db.ObjectId
}

enum Category {
  Home
  Electronic
  HealthAndPersonalCare
  Clothes
}

model Offer {
  offerId            String   @id @default(auto()) @map("_id") @db.ObjectId
  description        String?
  price              Float
  category           Category
  promotionalPicture String?
  publishedDate      DateTime @default(now())

  CreatedBy User   @relation("UserOffers", fields: [CreatorId], references: [userId])
  CreatorId String @db.ObjectId

  WishlistedItem   WishlistedItem @relation(fields: [WishlistedItemId], references: [wishlistedItemId])
  WishlistedItemId String         @unique @db.ObjectId
}
